<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="us.brandonandrews.justencryptit.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Password"
        android:layout_width="65dp"
        android:layout_height="21dp"
        android:id="@+id/tvPassword"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/etPassword"/>

    <EditText
        android:layout_width="176dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cbSavePassword"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvPassword"/>

    <CheckBox
        android:text="Remember Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbSavePassword"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/etPassword"/>

    <EditText
        android:layout_width="352dp"
        android:layout_height="184dp"
        android:ems="10"
        android:id="@+id/etEnterText"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Enter text to be encrypted"
        android:singleLine="false"
        android:inputType="textMultiLine"
        app:layout_constraintHorizontal_bias="1.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rgEncryptOrDecrypt"/>

    <Button
        android:text="Copy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnCopy"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintRight_toLeftOf="@+id/btnPaste"
        android:layout_marginEnd="4dp"/>

    <Button
        android:text="Paste"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnPaste"
        app:layout_constraintRight_toLeftOf="@+id/btnClear"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        android:layout_marginEnd="4dp"/>

    <Button
        android:text="Clear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        android:layout_marginEnd="4dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"/>

    <RadioGroup
        android:layout_width="384dp"
        android:layout_height="37dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        android:weightSum="50"
        android:id="@+id/rgEncryptOrDecrypt"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        android:layout_marginTop="8dp">

        <RadioButton
            android:text="Encrypt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rbEncrypt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
            android:layout_weight=".33"
            android:checked="true"/>

        <RadioButton
            android:text="Decrypt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rbDecrypt"
            app:layout_constraintHorizontal_bias="0.05"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="200dp"
            android:layout_weight="15.79"
            />

        <Spinner
            android:layout_height="match_parent"
            android:id="@+id/spinnerCustomPasswords"
            android:layout_width="220dp"
            android:paddingLeft="20dp"/>

    </RadioGroup>

    <Button
        android:text="Encrypt"
        android:layout_height="wrap_content"
        android:id="@+id/btnMakeText"
        android:textSize="10sp"
        android:layout_marginStart="4dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline3"
        app:layout_constraintRight_toLeftOf="@+id/btnCopy"
        android:layout_marginEnd="4dp"
        android:layout_width="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="366dp"
        tools:layout_editor_absoluteX="0dp"
        app:layout_constraintGuide_percent="0.7162427"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        app:layout_constraintGuide_begin="311dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="311dp"
        tools:layout_editor_absoluteX="0dp"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_zoom_in_black_24dp"
        android:id="@+id/imageButton2"
        style="@android:style/Widget.ImageButton"
        android:background="@drawable/ic_zoom_in_black_24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="@+id/guideline"
        android:layout_marginTop="4dp"
        android:id="@+id/scrollView2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tvFinalText"
            android:layout_marginEnd="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPaste"/>
    </ScrollView>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline4"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline5"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline6"
        app:layout_constraintGuide_begin="458dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="458dp"
        tools:layout_editor_absoluteX="0dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline7"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteY="20dp"
        tools:layout_editor_absoluteX="0dp"/>

</android.support.constraint.ConstraintLayout>
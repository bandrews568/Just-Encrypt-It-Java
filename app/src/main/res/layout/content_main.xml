<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="us.brandonandrews.justencryptit.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:text="Password"
        android:layout_width="65dp"
        android:layout_height="21dp"
        android:id="@+id/tvPassword"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/etPassword"/>

    <EditText
        android:layout_width="176dp"
        android:layout_height="45dp"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/etPassword"
        android:hint="Password"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cbSavePassword"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/tvPassword"/>

    <CheckBox
        android:text="Save Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbSavePassword"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/etPassword"/>

    <EditText
        android:layout_width="352dp"
        android:layout_height="184dp"
        android:ems="10"
        android:id="@+id/etEnterText"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Enter text to be encrypted"
        android:singleLine="false"
        android:inputType="textMultiLine"
        app:layout_constraintHorizontal_bias="0.4"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rgEncryptOrDecrypt"/>

    <Button
        android:text="Copy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCopy"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPaste"
        app:layout_constraintLeft_toRightOf="@+id/btnMakeText"
        android:layout_marginStart="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btnPaste"
        android:layout_marginEnd="8dp"/>

    <Button
        android:text="Paste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPaste"
        app:layout_constraintTop_toBottomOf="@+id/etEnterText"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toLeftOf="@+id/btnClear"
        android:layout_marginEnd="8dp"/>

    <Button
        android:text="Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnClear"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnPaste"
        android:layout_marginEnd="8dp"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:layout_width="354dp"
        android:layout_height="127dp"
        android:id="@+id/tvFinalText"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/btnPaste"/>

    <RadioGroup
        android:layout_width="384dp"
        android:layout_height="37dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        android:weightSum="1"
        android:id="@+id/rgEncryptOrDecrypt"
        app:layout_constraintTop_toBottomOf="@+id/etPassword"
        android:layout_marginTop="8dp">

        <RadioButton
            android:text="Encrypt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rbEncrypt"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPassword"
            android:layout_weight=".33"
            android:checked="true"/>

        <RadioButton
            android:text="Decrypt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/rbDecrypt"
            app:layout_constraintHorizontal_bias="0.05"
            tools:layout_editor_absoluteY="81dp"
            tools:layout_editor_absoluteX="200dp"
            android:layout_weight=".33"
            />

    </RadioGroup>

    <Button
        android:text="Encrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnMakeText"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnCopy"
        android:textSize="10sp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        />

</android.support.constraint.ConstraintLayout>
